//*****************************************************************************
// TITLE:	Build Task For Mouse Gestures AutoHotkey Script
// AUTHOR:	Rameen bakhtiary
// DATE:	11/17/2021
//*****************************************************************************
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Mouse Gestures",
			"type": "shell",
			"windows": {
				"command": "C:\\Program Files\\AutoHotkey\\Compiler\\Ahk2Exe.exe",
				"args": [
					"/in",
					"${cwd}\\Mouse Gestures.ahk",
					"/compress",
					"2"
				]
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "Sign the Mouse Gestures App",
			"type": "shell",
			"windows": {
				"command": "C:\\Program Files (x86)\\Windows Kits\\10\\bin\\10.0.22000.0\\x64\\signtool.exe",
				"args": [
					"sign",
					"/t",
					"http://timestamp.digicert.com",
					"/a",
					"${cwd}\\build\\Mouse Gestures.exe"
				]
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			}
		}
	]
}